generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  clerkId   String    @unique
  email     String    @unique
  name      String?
  role      Role      @default(USER)
  websites  Website[]
  points     Int       @default(0)
  reviews   Review[]
  comments  Comment[]
  blogs     Blog[]
  pointTransaction PointTransaction[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}

enum Role {
  USER
  ADMIN
}

model Website {
  id          String   @id @unique @default(cuid())
  title       String
  description String
  link        String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Review {
  id               String   @id @unique @default(cuid())
  description      String
  screenshotUrl    String
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  geminiConfidence Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now())
}

model Blog {
  id          String    @id @unique @default(cuid())
  title       String
  description String
  link        String?
  imageUrl    String?
  comments    Comment[]
  userId      String
  user        User      @relation(fields: [userId], references: [clerkId])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
}

model Comment {
  id        String   @id @unique @default(cuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  blogId    String
  blog      Blog     @relation(fields: [blogId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Pack {
  id String @id @default(cuid())
  key String @unique
  name String
  points Int
  price Int
  bonusPct Int @default(0)
  popular Boolean @default(false)
  active Boolean @default(true)
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
  pointTransaction PointTransaction[]

}

model PointTransaction {
  id String @id @default(cuid())
  userId String
  user User @relation(fields: [userId], references: [id])
  packId String?
  pack Pack? @relation(fields: [packId], references: [id])

  points Int
  price Int
  type TxType @default(PURCHASE)
  createdAt DateTime @default(now())
 }

enum TxType {
  PURCHASE
  BONUS
  ADJUSTMENT
}



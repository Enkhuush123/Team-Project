generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id      String  @id @default(cuid())
  clerkId String  @unique
  email   String  @unique
  name    String?
  role    Role    @default(USER)
  imageUrl String?
  votes   BlogVote[]

  points           Int                @default(0)
  pointTransaction PointTransaction[]

  sentTransfers     PointTransfer[] @relation("Sent")
  recievedTransfers PointTransfer[] @relation("Recieved")

  websites Website[]
  reviews  Review[]
  comments Comment[]
  blogs    Blog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

model Website {
  id          String  @id @unique @default(cuid())
  title       String
  description String
  link        String
  userId      String
  imageUrl    String?

  user User @relation(fields: [userId], references: [id])

  reviews   Review[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Review {
  id            String  @id @unique @default(cuid())
  description   String
  screenshotUrl String?

  geminiConfidence Int          @default(0)
  status           ReviewStatus @default(PENDING)
  websiteId        String
  website          Website      @relation(fields: [websiteId], references: [id])
  reviewerId       String?
  reviewer         User?        @relation(fields: [reviewerId], references: [id])
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @default(now())
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

model Blog {
  id          String    @id @unique @default(cuid())
  title       String
  description String
  link        String?
  imageUrl    String?
  comments    Comment[]
  votes       BlogVote[]
  userId      String
  user        User      @relation(fields: [userId], references: [clerkId])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
}

model Comment {
  id        String   @id @unique @default(cuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  blogId    String
  blog      Blog     @relation(fields: [blogId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Pack {
  id               String             @id @default(cuid())
  key              String             @unique
  name             String
  points           Int
  price            Int
  bonusPct         Int                @default(0)
  popular          Boolean            @default(false)
  active           Boolean            @default(true)
  createdAt        DateTime           @default(now())
  updateAt         DateTime           @updatedAt
  pointTransaction PointTransaction[]
}

model PointTransfer {
  id String @id @default(cuid())

  fromUserId String?
  toUserId   String?

  fromUser User? @relation("Sent", fields: [fromUserId], references: [clerkId])
  toUser   User? @relation("Recieved", fields: [toUserId], references: [clerkId])

  fromUserEmail String?
  toUserEmail   String?

  amount Int

  description String?
  createdAt   DateTime @default(now())
}

model PointTransaction {
  id     String  @id @default(cuid())
  userId String
  user   User    @relation(fields: [userId], references: [id])
  packId String?
  pack   Pack?   @relation(fields: [packId], references: [id])

  points    Int
  price     Int
  type      TxType   @default(PURCHASE)
  createdAt DateTime @default(now())
}

enum TxType {
  PURCHASE
  BONUS
  ADJUSTMENT
}

model BlogVote {
  id String @id @default(cuid())
  blogId String
  userId String
  value Int 
  blog Blog @relation(fields: [blogId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  uodatedAt DateTime @default(now())

  @@unique([blogId, userId])
}
